@model Houzing.Data.Houses.Deal

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-3">
    <div class="text-center text-dark h4">
        Create new Deal!
    </div>  
    <div class="row mt-1">
        <div class="col-md-4 offset-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-select">
                        <option selected disabled>Apartment type?</option>
                        <option value="for a long time">For a long time</option>
                        <option value="for a short time">For a short time </option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FromDeal" class="control-label"></label>
                    <input asp-for="FromDeal" type="date" class="form-control" />
                    <span asp-validation-for="FromDeal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ToDeal" class="control-label"></label>
                    <input asp-for="ToDeal" type="date" class="form-control" />
                    <span asp-validation-for="ToDeal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateDeal" class="control-label"></label>
                    <input asp-for="DateDeal" type="date" class="form-control" />
                    <span asp-validation-for="DateDeal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Summa" class="control-label"></label>
                    <input asp-for="Summa" class="form-control" />
                    <span asp-validation-for="Summa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PayType" class="control-label"></label>
                    <input asp-for="PayType" class="form-control" />
                    <span asp-validation-for="PayType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApartmentId" class="control-label"></label>
                    <input asp-for="ApartmentId" readonly class="form-control" value="@ViewBag.ApartmentId" />
                </div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <input asp-for="CustomerId" readonly class="form-control" value="@ViewBag.CustomerId" />
                </div>
                <div class="form-group">
                    <label asp-for="EmployerId" class="control-label"></label>
                    <input asp-for="EmployerId" readonly class="form-control" value="@ViewBag.EmployerId" />
                </div>
                <div class="form-group mt-3" style="display: flex; justify-content: flex-start; align-items: center;" >
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="ManageDeals" asp-controller="Deals" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
