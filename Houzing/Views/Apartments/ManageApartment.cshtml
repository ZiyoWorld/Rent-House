@model IEnumerable<Houzing.Data.Houses.Apartment>
@{
    ViewData["Title"] = "Manage Apartments";
    Layout = "/Views/Apartments/_ApartmentLayout.cshtml";
}

<div class="container">

    <form asp-action="ManageApartment" asp-controller="Apartments" method="post">

        <div class="searchbar">
            <select name="searchBy">
                <option value="Id">Id</option>
                <option value="Adress">Adress</option>
            </select>
            <input class="form-control w-25" name="search" />
            <input class="btn btn-primary" type="submit" value="Search" />
        </div>
    </form>

<h1>Manage Apartments</h1>

<table class="table table-bordered table-striped" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                Edit
            </th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberHouse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Floor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeHouse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Repair)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseItem.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary" asp-controller="Owner">Owners List</a>
    <a asp-action="Index" class="btn btn-warning" asp-controller="HouseValue">House Item List</a>
    <a asp-action="Index" asp-controller="Employers" class="btn btn-success">Employers List</a>
    </div>
</div>
